{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":automergeMinor",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "description": "Group Kubernetes packages",
      "groupName": "kubernetes",
      "matchPackagePrefixes": ["k8s.io/", "sigs.k8s.io/"]
    },
    {
      "description": "Group Go toolchain",
      "groupName": "go",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["golang"]
    },
    {
      "description": "Group GitHub Actions",
      "groupName": "github-actions",
      "matchManagers": ["github-actions"]
    },
    {
      "description": "Group test dependencies",
      "groupName": "testing",
      "matchPackageNames": ["github.com/onsi/ginkgo/v2", "github.com/onsi/gomega"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
